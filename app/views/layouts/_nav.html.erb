<header class='header group'>
  <nav class="header-nav group">
    <h1 class="header-logo group">
      <a href="#">Yelp Re-Imagined</a>
    </h1>

    <ul class="header-list group">
      <% if signed_in? %>
      <li class="sign-in">
        <a href="/#/users/<%= current_user.id %>">
          <i class="fa fa-user fa-lg"></i>
          <%= current_user.nickname == "" ? current_user.username : current_user.nickname %>
        </a>
        </li>
      <li class="sign-out"><%= link_to "Sign Out", session_url, :method => :delete %></li>
      <% else %>
      <li class="sign-in modal-signin"><%= link_to "Sign In", new_session_url %></li>
      <li class="sign-in modal-signup"><%= link_to "Sign Up", new_user_url %></li>
      <% end %>
    </ul>
  </nav>
</header>
