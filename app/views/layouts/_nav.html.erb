<header class='header group'>
  <nav class="header-nav group">
    <h1 class="header-logo group">
      <a href="#">Yelp Re-Imagined</a>
    </h1>

    <ul class="header-list group">
      <% if signed_in? %>
      <li class="sign-in">
        <a href="/#/users/<%= current_user.id %>">
          <i class="fa fa-user fa-lg"></i>
          <%= current_user.nickname == "" ? current_user.username : current_user.nickname %>
        </a>
        </li>
      <li class="sign-out"><%= link_to "Sign Out", session_url, :method => :delete %></li>
      <% else %>
      <li class="sign-in modal-signin">
        <a class="js-show-modal">
          Sign In
        </a>
      </li>
      <li class="sign-in modal-signup"><%= link_to "Sign Up", new_user_url %></li>
      <!-- Modal Sign-in Modal -->
         <section id="modal" class="modal">
           <article class="modal-content">
             <span class="modal-close js-hide-modal">x</span>
             <h1>Sign In</h1>
             <form id="sign-in" class="modal-sign-form">
               <label for="username">
                 Username (email) :
                 <input type="email" name="user[username]" placeholder="Email">
               </label>
               <label for="password">
                 Password :
                 <input type="password" name="user[password]" placeholder="Password">
               </label>
               <input class="submit-sign" type="submit" name="some_name" value="Sign In">
             </form>
           </article>
         </section>
         <script>
            $(document).ready(function () {
                window.showModal = function () {
                  $("#modal").addClass("is-active");
                }

                window.hideModal = function () {
                  $("#modal").removeClass("is-active");
                }
                $("body").on("click", ".js-show-modal", window.showModal);
                $("body").on("click", ".js-hide-modal", window.hideModal);
            });
         </script>
      <% end %>
    </ul>
  </nav>
</header>
