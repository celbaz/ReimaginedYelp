<div id="quick-view">
  <h4><%= restaurant.escape("name") %></h4>
  <div id="place-info">
    <li>Cuisine: <%= restaurant.escape("cuisine") %></li>
    <li>Address:
      <%= restaurant.escape("street") %>
      <%= restaurant.escape("city") %>,
      <%= restaurant.escape("state") %>
      <%= restaurant.escape("zipcode") %>
    </li>
    <li>Phone-Number: <%= restaurant.escape("phone_number") %></li>
  </div>
</div>

<hr>
 <div class="group scrolled">

    <form class="create-review">
      <h4>Add a Review</h4>
      <label for="title">Title: <input type="text" name="review[title]" place-holder="(Optional)" value=""></label>
      <label for="Rating">
        <select name="review[rating]">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </label>
      <h5 class="asdfasdf">Description: </h5>
        <textarea class="text-des" type="text" name="review[body]"></textarea>
      <input type="hidden" name="review[place_id]" value="<%= restaurant.id %>">
      <input type="submit" class="edit-user" value="Add Review">
    </form>

  <hr>

  <h4>Reviews</h4>
  <ul class="review-list">
    <% for( i in reviews) { %>
        <li>

          <div class="title-rev">
            <% if( reviews[i].title !== "") {%>
            Title: <%= reviews[i].title %>
            <% } %>
            Rating: <%= reviews[i].rating %>
            posted <%= reviews[i].created_at %> ago
          </div>
          <div class="body-rev">
            <%= reviews[i].body %>
          </div>
        </li>
    <% } %>
  </ul>

</div>
